{
    "compilerOptions": {
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "esModuleInterop": true,
        "module": "es2015",
        "declaration": true,
        "moduleResolution": "node",
        "target": "es5",
        "strict": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "sourceMap": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "baseUrl": "./src/",
        "outDir": "./dist/",
        "lib": [
            "es2015"
        ]
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.vue"
    ],
    "exclude": [
        "./node_modules"
    ]
}
